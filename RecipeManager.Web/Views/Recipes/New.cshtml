@using RecipeManager.Web.Models;
@model Recipe

@{
    ViewBag.Title = "New";
}

<h2>Add a New Recipe</h2>

@*TODO 15. Add the form to make sure SAVE posts the data and goes back to the home screen *@
<form action="" method="post" enctype="multipart/form-data"> @*22. Support file upload *@

    @*TODO  16. Bind the View to a Model and add all of the form fields for the recipe  *@
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "enter recipe name" })
        <small class="text-muted form-text">Make it catchy!</small>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Description)
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", placeholder = "enter description" })
        <small class="text-muted form-text">Tell us why it's great!</small>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CookingTime)
        @Html.TextBoxFor(m => m.CookingTime, new { @class = "form-control", type = "number" })
        <small class="text-muted form-text">Don't burn it!</small>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.PrepTime)
        @Html.TextBoxFor(m => m.PrepTime, new { @class = "form-control", type = "number" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Details)
        @Html.TextAreaFor(m => m.Details, new { @class = "form-control", rows = "8" })
    </div>

    @*TODO 21. Add the file upload box*@
    <div class="form-group">
        @Html.LabelFor(m => m.ImageName)
        <input type="file" name="recipeImage" class="form-control-file" accept=".png, .jpg" />
        <small class="text-muted form-text">Pick your favorite image of the recipe</small>
    </div>


    <input type="submit" value="New" name="action:New" />
    <input type="submit" value="Save for Later" name="action:SaveForLater" />
</form>
